#!/bin/bash

# manage magnet urls

if [[ "$1" == "-r" ]]; then
  ssh -t ec2 screen -r
else
  if [[ "$OSTYPE" =~ ^darwin ]]; then
    (pbpaste; echo) | while read -r x; do
      [ -n "$x" ] && ssh ec2 'maguri '\'$x\'
    done
  else
    [[ "$1" =~ xt=urn:btih:([^&/]+) ]] || return 1;
    echo "d10:magnet-uri${#1}:${1}e" > "/mnt/bogota/torrents/watch/meta-${BASH_REMATCH[1]}.torrent"
  fi
fi
