#!/usr/bin/env coffee

# https://github.com/shrpne/from-exponential
# ...install, minify, beautify, prune
`
function r(r) {
    return Array.isArray(r) ? r : String(r).split(/[eE]/)
}
function fromExp(e) {
    var t = r(e);
    if (! function(e) {
            var t = r(e);
            return !Number.isNaN(Number(t[1]))
        }(t)) return t[0];
    var n = "-" === t[0][0] ? "-" : "",
        u = t[0].replace(/^-/, "").split("."),
        i = u[0],
        f = u[1] || "",
        o = Number(t[1]);
    if (0 === o) return n + i + "." + f;
    if (o < 0) {
        var s = i.length + o;
        if (s > 0) return n + i.substr(0, s) + "." + i.substr(s) + f;
        var a = "0.";
        for (o += 1; o;) a += "0", o += 1;
        return n + a + i + f
    }
    var c = f.length - o;
    if (c > 0) {
        var p = f.substr(o);
        return n + i + f.substr(0, o) + "." + p
    }
    for (var b = -c, d = ""; b;) d += "0", b -= 1;
    return n + i + f + d
}
`

process.argv.slice(2).forEach (x) ->
  # https://stackoverflow.com/a/2901298/2926055
  s = fromExp(eval x)
  if s.match /(\D*0\.)(.*)/
    console.log s.replace /(\d{3})(?=\d)/g, (x...) -> "#{x[1]},"
  else
    console.log s.replace(/\B(?=(\d{3})+(?!\d))/g, ",")
