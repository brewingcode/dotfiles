most_recent() {
  regex="${1:-.}"
  "$(command -v gls || echo ls)" -1t --color=never | grep -E "$regex" | head -1
}

ruler() {
  for s in '....^....|' '1234567890'; do w=${#s}; str=$( for (( i=1; $i<=$(( ($COLUMNS + $w) / $w )) ; i=$i+1 )); do echo -n $s; done ); str=$(echo $str | cut -c -$COLUMNS) ; echo $str; done;
}
